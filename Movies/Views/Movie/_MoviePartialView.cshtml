@model Movie

@if (Model == null)
{
    <h2>No Movies Provided</h2>
}
else
{
    <h3>@Model.Title</h3>
    <h3>@Model.Year</h3>
    <h3>@Model.Rating</h3>
    <h3>@Model.MPARATING</h3>
    <h3>@Model.Genre</h3>
    
    //Edit button
    <a asp-controller="Movie" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mx-2">
        <i class="bi bi-pencil-square"></i> Edit
    </a>

    <a asp-controller="Movie" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mx-2">
        <i class="bi bi-trash"></i> Delete
    </a>
    
}